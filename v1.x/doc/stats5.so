	include_once('scripts/functions.inc');
	include_once('scripts/auth.inc');
	$_ACCESS=chk_session();
	if($_ACCESS=='') {
		write_userlog('Accessing Log & Stat -> User Logs','Access denied');
		go_exit();
	}

	// create download dir
	//@mkdir('download',0700);

	// remove exported file
	@shell_exec("rm -f download/userlog*.tgz");
	
	// global var
	$logdir=get_ini('MINISERV','REPORT');
	$lineview=get_ini('IDS','LINEVIEW');
	$logmsg='Record not exists';
	$load="onload='initjsDOMenu();'";
	if(isset($do)&& $do=='1') {
		if(isset($action) && $action!='') {
			write_userlog("Executing Log & Stat -> User Logs -> $action",'Action granted');
			switch($action) {
				case 'show_log':
				list($cyear,$cmonth,$cday)=preg_split("/-/",$log);
				break;
				case 'export_log':
					$date=date('ymd');
					shell_exec("mkdir -p /tmp/userlog$date");
					$empty='0';
					if($handle = opendir("$logdir")) { 
   						while(($file = readdir($handle)) !== false) {  
       							if($file != "." && $file != "..") {
           							if(preg_match("/(\d+)-(\d+)-(\d+).log/",$file)) {
									$empty++;
									shell_exec("cp -a $logdir/$file /tmp/userlog$date");
								}	 
       							}	 
  						}
   						closedir($handle);
						clearstatcache();
					} 
					if(is_dir("/tmp/userlog$date") && $empty!=0) {
						$cwd=getcwd();
						chdir('/tmp');
						shell_exec("tar -zcf $cwd/download/userlog$date.tgz userlog$date");
						if(file_exists("$cwd/download/userlog$date.tgz")) {
							$load="onload=initjsDOMenu();load('/download.so?file=userlog$date.tgz');";
						} else {
							$load="onload=initjsDOMenu();";
							$logmsg='Export file error. Nothing to export';
							write_userlog("Executing Log & Stat -> User Logs -> $action",'Action denied -> export file error');
						}
						chdir($cwd);
					} else {
						$logmsg='Logs for user is empty. Nothing to export';
						write_userlog("Executing Log & Stat -> User Logs -> $action",'Action denied -> nothing to export');
					}
					shell_exec("rm -rf /tmp/userlog*");
				break;
				case 'clear_log':
					if(!is_admin($_ACCESS)) {
						if($handle = opendir("$logdir")) { 
   							while(($file = readdir($handle)) !== false) {  
       								if($file != "." && $file != "..") {
           								if(preg_match("/(\d+)-(\d+)-(\d+).log/",$file)) {
										shell_exec("rm -f $logdir/$file");
									}	 
       								}	 
  							}
   							closedir($handle);
							clearstatcache();
							write_userlog("Executing Log & Stat -> User Logs -> $action",'Action granted');
							if(file_exists('/tmp/no_log')) unlink('/tmp/no_log');
						}
						$logmsg='log files for user cleared';
					} else {
						$logmsg="Opss.. you're no admin sir..";
					}
				break;
			}
		}
		unset($do,$action);
	}
	
	// start
	$currentPage = $HTTP_SERVER_VARS["PHP_SELF"];
	$pageNum_Recordset='0';
	$maxRows_Recordset=$lineview;
	if(isset($HTTP_GET_VARS['pageNum_Recordset'])) {
  		$pageNum_Recordset = $HTTP_GET_VARS['pageNum_Recordset'];
	}
	$startRow_Recordset = $pageNum_Recordset * $maxRows_Recordset;
	if(!isset($log)) {
		$log=date('y')."-".date('m')."-".date('d').".log";
	} else {
		list($cyear,$cmonth,$cday)=preg_split("/-/",$log);
		$cday=trim($cday,'.log');
	}
	$row_Recordset=array();
	if(file_exists("$logdir/$log")) {
		$line=file("$logdir/$log");
		$i='1';
		for($x=count($line);$x >= $startRow_Recordset;$x--) {
			$buff=$line[$x];
			$buff=trim($buff);
			if($buff!='' && $i!=$maxRows_Recordset) {
				array_push($row_Recordset,$buff);
				$i++;
			}
		}
	}
	if(isset($HTTP_GET_VARS['totalRows_Recordset'])) {
  		$totalRows_Recordset = $HTTP_GET_VARS['totalRows_Recordset'];
	} else {
  		$totalRows_Recordset=count($line);
	}

	$totalPages_Recordset=ceil($totalRows_Recordset/$maxRows_Recordset)-1;
	$queryString_Recordset = "";
	if(!empty($HTTP_SERVER_VARS['QUERY_STRING'])) {
  		$params = explode("&", $HTTP_SERVER_VARS['QUERY_STRING']);
  		$newParams = array();
  		foreach ($params as $param) {
    			if (stristr($param, "pageNum_Recordset") == false && 
        			stristr($param, "totalRows_Recordset") == false) {
      				array_push($newParams, $param);
    			}
  		}
  		if (count($newParams) != 0) {
    			$queryString_Recordset = "&" . implode("&", $newParams);
  		}
	}
	$queryString_Recordset = sprintf("&log=%s&totalRows_Recordset=%d%s", $log, $totalRows_Recordset, $queryString_Recordset);

	write_userlog('Accessing Log & Stat -> User Logs','Access granted');
	write_nocache();
?>
