	// Do
	if(isset($do)&& $do=='1') {
		if($action=='backup') {
			$date=date('ymd');
			@shell_exec("rm -f download/mybox_backup*.dat");
			@shell_exec("cp -a /hd/configs download");
			$cwd=getcwd();
			chdir('download');
			@unlink("configs/backup.lst");
			@unlink("configs/rbackup.lst");
			@unlink("configs/arp.lst");
			@unlink("configs/mybox-release");
			@unlink("configs/modules.lst");
			@unlink("configs/md5sum.lst");
			@unlink("configs/update.lst");
			@shell_exec("tar -zcf mybox_backup$date.dat configs");
			@shell_exec("rm -rf configs");
			if((file_exists("mybox_backup$date.dat"))&&(zip_encrypt("mybox_backup$date.dat")=='OK')) {
				$onload="onload=\"initjsDOMenu();load('/download.so?file=mybox_backup$date.dat');\"";
				write_userlog("Executing Admin -> Backup/Restore -> $action command",'Action granted');
				$msg="Please wait.. downloading..<br><br><input type=button value=Back onclick=\"load('admin1.so');\" class=input_button>";
				backup_alert("$_ACCESS",'Backup the system configuration file. Action granted');
				write_backuplog($action);
			} else {
				$onload="onload=\"initjsDOMenu();\"";
				$msg="Error on downloading.<br><br><input type=button value=Back onclick=\"load('admin1.so');\" class=input_button>";
				backup_alert("$_ACCESS",'Backup the system configuration file. Action denied -> Error on file');
			}
			chdir($cwd);
		}

		if($action=='restore') {
			if(is_uploaded_file($upload)) {
				copy($upload, "/tmp/$upload_name");
				if(file_exists("/tmp/$upload_name")) {
					if(preg_match("/^mybox_backup(\d+)\.dat/",$upload_name)) {
						$cwd=getcwd();
						chdir('/tmp');
						if(zip_decrypt("$upload_name")=='OK') {
							write_userlog("Executing Admin -> Backup/Restore -> $action command",'Action granted');
							shell_exec("rm -rf /hd/configs.save");
							shell_exec("cp -a /hd/configs /hd/configs.save");
							shell_exec("tar -zxf /tmp/$upload_name -C /hd");
							@unlink("/tmp/$upload_name");
							write_backuplog($action);
							$msg="Please wait.. restoring..";
							backup_alert("$_ACCESS",'Restore the system. Action granted');
						} else {
							write_userlog("Executing Admin -> Backup/Restore -> $action command",'Action denied -> Error on file');
							$msg="Error on restoring.";
							backup_alert("$_ACCESS",'Restore the system. Action denied -> Error on file');
						}
						chdir($cwd);
					} else {
						write_userlog("Executing Admin -> Backup/Restore -> $action command",'Action denied -> Error on file');
						$msg="Error on restoring.";
						backup_alert("$_ACCESS",'Restore the system. Action denied -> Error on file');
					}
				}
			}
		}
		unset($do);
	}
	
	write_nocache();
