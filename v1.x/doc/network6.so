	function write_falinklist($value) {
		del_route();
		$list=explode(',',$value);
		$handle=fopen("/hd/configs/falink.lst", "w");
		for($x='0';$x<count($list);$x++) {
			$pp=rtrim($list[$x],',');
			fputs($handle,"$pp\n");
		}
		fclose($handle);
	}

	if(isset($do)&& $do=='1') {
		$list=trim(rtrim(($list),','));
		write_falinklist($list);
		write_ini('FAILOVER','GATEWAY_BACKUP',$gwlink);
		write_ini('FAILOVER','LOOP_CHECK',$idle);
		write_ini('FAILOVER','TIMEOUT_CONNECT',$timeout);
		write_ini('FAILOVER','TIME_SWITCH',$switch);
		write_ini('FAILOVER','LINK','/hd/configs/falink.lst');
		unset($do,$list);
		shell_exec('/etc/init.d/failover.sh restart');
		write_userlog('Executing Network -> Link Failover -> Saving data','Action granted');
		header("Location: network_msg.so?msg=Please wait.. saving data..&ref=network6.so");
	}
	write_userlog('Accessing Network -> Link Failover page','Access granted');
