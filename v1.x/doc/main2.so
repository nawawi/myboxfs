	include_once('scripts/auth.inc');
	$_ACCESS=chk_session();
	if($_ACCESS=='' || is_admin($_ACCESS)) {
		write_userlog('Accessing Main -> System Update page','Access denied');
		go_exit();
	}
	if(isset($do)&& $do=='2') {
		// we want keep this: awie (05/12/2003)
