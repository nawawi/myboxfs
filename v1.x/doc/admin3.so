	function doselect() {
		var str=document.f.alm.value;
		if(str=='') return false;
		var pArray=str.split("|");
		document.f.name.value=pArray[0];
		document.f.email.value=pArray[1];
		var ids=pArray[2];
		var backup=pArray[3];
		var system=pArray[4];
		var active=pArray[5];
	
		document.f.ids.checked=false
		document.f.backup.checked=false;
		document.f.system.checked=false;
		document.f.active0.checked=false;
		document.f.active1.checked=false;
		if(ids=='1') document.f.ids.checked=true;		
		if(backup=='1') document.f.backup.checked=true;
		if(system=='1') document.f.system.checked=true;
		if(active=='1') {
			document.f.active0.checked=true
		} else {
			document.f.active1.checked=true
		}
		return true
	}
	function deleteval() {
		var lstlenght=document.f.alm.length;
		var list=document.f.alm;
		for(var i='0';i<lstlenght;i++) {
			if(list[i]!=null) {
				if(list.options[i].selected==true) {
					list[i]=null;
				}
			}
		}
		return true;
	}
	function dosubmit() {
		var lstlenght=document.f.alm.length;
		var list=document.f.alm;
		var X='';
		for(i='0';i<lstlenght;i++) {
			X +=list.options[i].value;
			X +=',';
		}
		document.f.list.value=X;
		return true;
	}
