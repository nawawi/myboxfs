<script language="javascript1.2"><!--
	defaultStatus="DMZ Hostname Setup";
	function doselect() {
		var lst=document.f.lst.value;
		var parray=lst.split("|");
		var ip=parray[0];
		var host=parray[1];
		if(ip=='') return;
		document.f.ip.value=ip;
		document.f.host.value=host;
		return true;
	}
	function dodelete() {
		var lstlenght=document.f.lst.length;
		var list=document.f.lst;
		for(var i='0';i<lstlenght;i++) {
			if(list[i]!=null) {
				if(list.options[i].selected==true) {
					list[i]=null;
				}
			}
		}
		return true;
	}
	function doadd() {
		var ip=document.f.ip.value;
		var host=document.f.host.value;
		host=delspace(host);
		if(ip=='' | host=='') {
			alert('Invalid input');
			return false;
		}
		if(!checkIp(ip)) {
			document.f.ip.value='';
			document.f.ip.focus();
			return false;
		}
		var lstlenght=document.f.lst.length;
		var list=document.f.lst;
		for(i='0';i<lstlenght;i++) {
			if(list.options[i].text==host) {
				alert('Hostname already exists');
				return false;
			}
		}
		var val=ip+'|'+host;
		document.f.lst[lstlenght]=new Option(host,val);
		return true;
	}
	function doupdate() {

		var ip=document.f.ip.value;
		var host=document.f.host.value;

		if(ip=='' | host=='') {
			alert('Invalid input');
			return false;
		}
		if(!checkIp(ip)) {
			document.f.ip.value='';
			document.f.ip.focus();
			return false;
		}
		var lstlenght=document.f.lst.length;
		var list=document.f.lst;
		var val=ip+'|'+host;
		var ok='0';
		for(i='0';i<lstlenght;i++) {
			if(list.options[i].text==host) {
				list.options[i].value=val;
				ok='1';
			}
		}
		if(!ok) {
			alert('no such Hostname for update');
			return false;
		}
		return true;
	}
	function dosubmit() {
		var lstlenght=document.f.lst.length;
		var list=document.f.lst;
		var X='';
		for(i='0';i<lstlenght;i++) {
			X +=list.options[i].value;
			X +=',';
		}
		document.f.list.value=X;
		return true;
	}
//--></script>
